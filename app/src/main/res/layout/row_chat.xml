<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/sendLay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="22dp"
            android:text=""
            android:textStyle="bold"
            android:background="@drawable/card_name_field_shape"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/datetext"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toLeftOf="@+id/iv_user"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/messageText"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toLeftOf="@+id/iv_user"
            android:text=""
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/login_button_shape"
            android:backgroundTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/datetext"
            android:layout_below="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_user"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/receiveLay"
        android:visibility="gone"
        android:layout_below="@+id/sendLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/receiverImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="22dp"
            android:text=""
            android:textStyle="bold"
            android:background="@drawable/card_name_field_shape"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/receiverDate"/>

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@+id/receiverImage"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/receivermessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiverName"
            android:layout_toRightOf="@+id/receiverImage"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:background="@drawable/login_button_shape"
            android:backgroundTint="@color/description"/>

        <TextView
            android:id="@+id/receiverDate"
            android:layout_below="@+id/receivermessageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/receiverImage"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>
